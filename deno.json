{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A build.ts",
    "preview": "deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.6.5/",
    "$std/": "https://deno.land/std@0.208.0/",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/": "https://esm.sh/preact@10.19.6/",
    "preact-render-to-string": "https://esm.sh/preact-render-to-string@6.2.1?deps=preact@10.19.6",
    "@preact/signals": "https://esm.sh/@preact/signals@1.2.1?deps=preact@10.19.6",
    "@preact/signals-core": "https://esm.sh/@preact/signals-core@1.3.1?deps=preact@10.19.6",
    "@std/": "jsr:@std/",
    "marked": "https://esm.sh/marked@12.0.1",
    "marked/": "https://esm.sh/marked@12.0.1/",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "dompurify": "https://esm.sh/dompurify@3.0.8",
    "std/": "https://deno.land/std@0.208.0/"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
